# Minecraft Server Environment Variables
# Copy this file and customize the values as needed

# Basic Server Settings
EULA=TRUE
TYPE=VANILLA
VERSION=1.21.9
SERVER_NAME=My Foo Minecraft Server
MOTD=Welcome to my Foo Minecraft server!

# Network Settings
SERVER_PORT=25565
RCON_PORT=25575
RCON_PASSWORD=Admin123*
ENABLE_RCON=true

# Game Settings
DIFFICULTY=hard
GAMEMODE=survival
MAX_PLAYERS=4
VIEW_DISTANCE=12
SIMULATION_DISTANCE=12
ALLOW_NETHER=true
ALLOW_FLIGHT=false
PVP=true

# World Settings
LEVEL_NAME=world
LEVEL_TYPE=default
SEED=
GENERATE_STRUCTURES=true
SPAWN_PROTECTION=16

# Security Settings
ONLINE_MODE=true
ENABLE_WHITELIST=true
# Comma-separated list of usernames for whitelist (if enabled)
WHITELIST=darkboy5120
# Comma-separated list of usernames for operators
OPS=
ENFORCE_WHITELIST=true

# Performance Settings
MEMORY=16G
CPU_LIMIT=4.0
MAX_TICK_TIME=60000
ENABLE_AUTOPAUSE=false

# Logging
ENABLE_ROLLING_LOGS=true